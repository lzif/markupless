{
  "name": "markupless",
  "description": "Frontend framework with Fluent-API",
  "version": "0.0.3",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "release": {
    "branches": [
      "master"
    ]
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "build-pkg": "tsup src/index.ts --format cjs,esm --minify --dts",
    "test": "vitest",
    "prepublishOnly": "pnpm run build-pkg"
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  },
  "dependencies": {
    "markupless": "^0.0.3"
  }
}
